<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ff9933"
    android:fillViewport="true"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="32dp"
            android:text="Phone Information"
            android:textAppearance="?android:textAppearanceLarge" />

        <Button
            android:id="@+id/btnPhoneLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="Phone Language"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btnPhoneModelAndManufacturer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnPhoneLanguage"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"
            android:background="#a7c942"
            android:text="Phone Model and manufacturer" />

        <Button
            android:id="@+id/btnAndroidVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnPhoneModelAndManufacturer"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="47dp"
            android:text="Android version" />

        <Button
            android:id="@+id/btnPhoneImeiNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnAndroidVersion"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:text="Phone IMEI Number" />

        <Button
            android:id="@+id/btnPhoneNetworkTypeAndCarrier"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnPhoneImeiNumber"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="51dp"
            android:text="Networ Type and carrrier" />

        <Button
            android:id="@+id/btnDisplayResolution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnPhoneNetworkTypeAndCarrier"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="43dp"
            android:drawableLeft="@drawable/resolution_icon"
            android:text="Display Resolution" />

        <Button
            android:id="@+id/btnInternetConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnDisplayResolution"
            android:drawableRight="@drawable/resolution_icon"
            android:text="Internet Conccetion" />


    </RelativeLayout>
</ScrollView>
